<input type="text" class="form-control input-sm m-b-md" id="filter" placeholder="Search in table">
<table id="viewConversations" class="footable table table-stripped toggle-arrow-tiny" data-page-size="8" data-filter=#filter>
    <thead>
    <tr>
        <th>Name</th>
        <th data-hide="all">Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#each conversations}}
        <tr>
            <td>{{ this.name }}</td>
            <td>
                <button type="button" onclick="location.href = '/conversations/edit/{{ this.slug }}'"
                        class="btn btn-info btn-sm">
                    <i class="fa fa-pencil"></i> Edit
                </button>
                <button type="button" class="btn btn-danger2 btn-sm user-delete" data-id="{{ this._id }}">
                    <i class="fa fa-trash"></i> Delete
                </button>
                <form method="post" action="/conversations/{{ this._id }}?_method=DELETE" class="inline" id="{{ this._id }}">
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="5">
            <ul class="pagination pull-right"></ul>
        </td>
    </tr>
    </tfoot>
</table>